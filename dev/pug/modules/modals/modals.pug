                        input.pin-code__input(type="tel" maxlength="1" autofocus)
                        input.pin-code__input(type="tel" maxlength="1")
                        input.pin-code__input(type="tel" maxlength="1")
                        input.pin-code__input(type="tel" maxlength="1")
