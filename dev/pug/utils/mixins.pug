mixin svg(name, w, h, folder)
	if (folder)
		img(src=`static/images/general/${folder}/${name}.svg`, width=`${w}` height=`${h}` alt="img")
	else 
		img(src=`static/images/general/${name}.svg`, width=`${w}` height=`${h}` alt="img")

