mixin productCard(img, className)
	.productCard
		.productCard__top
			.productCard__img 
				+pngC(`${img}`, '305', '296')
			.productCard__sale.ttl.sticker — 30%
			a.productCard__favorite.icon(href="#")
				+svg('heart') 
		.productCard__bottom
			.productCard__title.ttl.title1 
				a(href="#") MOBY BE KIND 
			.productCard__price.ttl.title2
				.productCard__price-new 18 990 ₽
				.productCard__price-old 22 990 ₽
			.productCard__tags.flex
				.productCard__tags-item 
					+svg('bekind', '54', '24')
				.productCard__tags-item 
					+svg('reash', '68', '24')


