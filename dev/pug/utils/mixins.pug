mixin newCard(favorite, cart, colors, discount, special)
	a.card(href="#", class=favorite ? 'card-selected' : '', class=colors ? 'card-no-colors' : '')
		.card-img
			.card-img__slider.slider
				.swiper-wrapper 
					.swiper-slide 
						.card-img__slider-img
							+pngC('card-photo', '303', '404')
					.swiper-slide 
						.card-img__slider-img
							+pngC('card-photo', '303', '404')
					.swiper-slide 
						.card-img__slider-img
							+pngC('card-photo', '303', '404')
					.swiper-slide 
						.card-img__slider-img
							+pngC('card-photo', '303', '404')
			.card-img__pagination
		.card-img-mobile
			//- .card-img-mobile__inner 
			+pngC('card-photo-m', '134', '180')
		.card-info(class=cart ? 'card-info--cart' : '')
			.card-info__name.txt-sm НАЗВАНИЕ КАПСОМ
			.card-price.card-info__price.txt-sm
				.card-price__new 18 990 ₽
				.card-price__old 22 990 ₽ 
		if (!cart)
			.card-hidden 
				.card-hidden__sizes 
					.card-sizes.d-flex.txt-sm
						.card-sizes__item 35
						.card-sizes__item 36
						.card-sizes__item 37
						.card-sizes__item.card-sizes__item--disabled 38
						.card-sizes__item 39
						.card-sizes__item.card-sizes__item--disabled 40
						.card-sizes__item 41
				if (!colors)
					.card-hidden__colors
						.card-colors
							.card-colors__list.d-flex 
								- for (let i = 1; i < 6; i++)
									.card-colors__list-item 
										.card-colors__item 
											+jpgC(`img-card`, '62', '77')
								.card-colors__list-item 
									.card-colors__item.card-colors__item--txt.txt-sm +3

		.card-stickers
			if (discount)
				if (discount == '50')
					.card-stickers__item.card-stickers__item--sale-2.ttl.sticker -50%
				else if (discount == '70')
					.card-stickers__item.card-stickers__item--sale-3.ttl.sticker -50%
				else 
					.card-stickers__item.card-stickers__item--sale.ttl.sticker -30%
			if (special)
				.card-stickers__item.card-stickers__item--grey.ttl.sticker special offer
		if (!favorite)
			button.card-favorite.fav-btn.icon(type="button")
				+icon('heart') 
				+icon('heart-fill')
		else 
			button.card-favorite.fav-btn.icon.active(type="button")
				+icon('heart') 
				+icon('heart-fill')

