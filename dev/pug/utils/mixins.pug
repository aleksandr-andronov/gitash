mixin svg(name, w, h)
	img(src=`static/images/general/${name}.svg`, width=`${w}` height=`${h}` alt="img")

mixin pngG(name, w, h)
	picture
		source(srcset=`static/images/general/${name}.webp`, type='image/webp')
		img(src=`static/images/general/${name}.png`, width=`${w}`, height=`${h}`, alt='img')

mixin pngC(name, w, h)
	picture
		source(srcset=`static/images/content/${name}.webp`, type='image/webp')
		img(src=`static/images/content/${name}.png`, width=`${w}`, height=`${h}`, alt='img')

mixin jpgC(name, w, h)
